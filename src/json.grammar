@top JsonText { value }

value {
  True |
  False |
  Null |
  Number
}

@tokens {
  whitespace { $[ \n\r\t] }
  True { "true" }
  False { "false" }
  Null { "null" }
  Number { '-'? int frac? exp?  }
  int { '0' | ($[1-9] std.digit*) }
  frac { '.' std.digit+ }
  exp { $[eE] $[+\-]? std.digit+ }
}

@skip { whitespace }
